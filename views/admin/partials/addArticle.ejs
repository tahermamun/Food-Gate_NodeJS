<div class="add_article_section mt-3">
    <p>Article <span>Create new</span></p>
    <div class="form_section">

        <form 
        action="/admin/addArticle"
        class="article_input_form"
        type="application/x-www-form-urlencoded"
        enctype="multipart/form-data"
        method="POST"
         >
            <div class="form-group mt-3">
                <label for="title">Title</label><br>
                <input class="form-control" name='title' type="text" id='title' placeholder="Write a unique title">
            </div>
            <div class="form-group mt-3">
                <label for="title">Description</label><br>
                <textarea name='description' class="form-control" type="text" rows="6" id='title'
                    placeholder="Write a unique title"></textarea>
            </div>
            <div class="form-group mt-3">
                <label for="image">Article Image</label><br>
                <input name='picture' class="form-control" type="file" id='image' placeholder="Upload article image">
            </div>
            <input type="submit" class="submit_button mt-3" value="Create">

        </form>


